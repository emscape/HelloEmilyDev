{
  "name": "helloemilydev",
  "version": "1.0.0",
  "description": "This repository contains the source code for my personal website hosted at [HelloEmily.dev](https://HelloEmily.dev).",
  "main": "index.js",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "npm run test && npm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run tests/utils/security.test.js",
    "test:date": "vitest run tests/utils/date-formatter.test.js",
    "test:parser": "vitest run tests/blog-content-parser.test.js",
    "lint": "echo 'ESLint not installed - run: npm install eslint --save-dev'",
    "format": "echo 'Prettier not installed - run: npm install prettier --save-dev'",
    "blog:process": "node scripts/process-blog-draft.js",
    "blog:rebuild": "node scripts/rebuild-blog-index.js",
    "blog:validate": "node scripts/validate-blog-posts.js",
    "blog:repair": "node scripts/repair-blog-posts.js",
    "blog:repair:preview": "node scripts/repair-blog-posts.js --dry-run",
    "blog:safe-process": "npm run blog:validate && npm run blog:repair && npm run blog:validate",
    "blog:full-rebuild": "npm run blog:rebuild && npm run blog:validate && npm run blog:repair",
    "blog:pre-commit": "node scripts/pre-commit-blog-check.js",
    "images:optimize": "node scripts/optimize-images.js",
    "validate": "npm run blog:validate && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emscape/HelloEmilyDev.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/emscape/HelloEmilyDev/issues"
  },
  "homepage": "https://github.com/emscape/HelloEmilyDev#readme",
  "dependencies": {
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.11"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^19.0.2",
    "jsdom": "^27.0.0",
    "sharp": "^0.34.4",
    "vitest": "^3.2.4"
  }
}
